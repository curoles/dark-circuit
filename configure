#!/bin/bash

SRC=$(dirname ${BASH_SOURCE[0]})

declare -a dirs=(
 "tools"
 "blocks/Incr/test"
 "blocks/AddCmp/test"
 "blocks/RegFile/test"
)
 
for dir in ${dirs[@]}; do
    echo Generate proxy Makefile for \'$dir\'
    mkdir -p $dir
    echo "SRC := $(realpath ${SRC}/$dir)" > ./$dir/Makefile
    echo "SRC_ROOT := $(realpath ${SRC})" >> ./$dir/Makefile
    echo "include \$(SRC)/Makefile" >> ./$dir/Makefile
done

